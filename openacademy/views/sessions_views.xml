<odoo>
    <data>

        <record model="ir.ui.view" id="sessions_list">
            <field name="name">openacademy.sessions.list</field>
            <field name="model">openacademy.sessions</field>
            <field name="arch" type="xml">
                <tree string="Session list" decoration-info="duration&lt;5" decoration-danger="duration&gt;15">
                    <field name="name"/>
                    <field name="course"/>
                    <field name="instructor"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="duration"/>
                    <field name="number_of_seats"/>
                    <field name="percent_taken_seats" widget="progressbar"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="sessions_form">
            <field name="name">openacademy.sessions.form</field>
            <field name="model">openacademy.sessions</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="course"/>
                                <field name="instructor"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="duration"/>
                                <field name="number_of_seats"/>
                                <field name="percent_taken_seats" widget="progressbar"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Attendees">
                                <field name="attendees"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="sessions_calendar">
            <field name="name">openacademy.sessions.calendar</field>
            <field name="model">openacademy.sessions</field>
            <field name="arch" type="xml">
                <calendar string="Session calendar" date_start="start_date" date_stop="end_date" color='course'>
                    <field name="name"/>
                    <field name="course"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="instructor"/>
                </calendar>
            </field>
        </record>

        <record model="ir.ui.view" id="sessions_view_graph">
            <field name="model">openacademy.sessions</field>
            <field name="name">openacademy.sessions.graph</field>
            <field name="arch" type="xml">
                <graph string="Graf">
                    <field name="course"/>
                    <field name="attendees_count" type='measure'/>
                </graph>
            </field>
        </record>

        <record model="ir.ui.view" id="sessions_view_kanban">
            <field name="name">openacademy.sessions.kanban</field>
            <field name="model">openacademy.sessions</field>
            <field name="arch" type="xml">
                <kanban default_group_by="course" sample="1">
                    <field name="course"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <ul>
                                        <li>
                                            <field name="name"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_open_sessions">
            <field name="name">Sessions</field>
            <field name="res_model">openacademy.sessions</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_session_graph">
            <field name="name">Sessions</field>
            <field name="res_model">openacademy.sessions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">graph</field>
            <field name="view_id" ref="sessions_view_graph"/>
        </record>

        <record model="ir.actions.act_window" id="action_session_calendar">
            <field name="name">Sessions</field>
            <field name="res_model">openacademy.sessions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">calendar</field>
            <field name="view_id" ref="sessions_calendar"/>
        </record>

    </data>
</odoo>